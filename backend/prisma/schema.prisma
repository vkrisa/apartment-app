generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Apartment {
  id String @id @default(uuid())
  name String
  description String
  ownerId String @unique
  owner Owner @relation(fields: [ownerId], references: [id])
  clients Client[]

  @@map("aparment")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      Role     @default(client)
  createdAt DateTime @default(now())
  firstName String
  lastLogin DateTime @default(now())
  lastName  String
  owner Owner?
  client Client?
  @@map("user")
}

model Owner {
  id String @id @default(uuid())
  user User @relation(fields: [userId], references: [id])
  userId String @unique
  apartment Apartment?

  @@map("owner")
}

model Client {
  id String @id @default(uuid())
  user User @relation(fields: [userId], references: [id])
  userId String @unique
  aparment Apartment? @relation(fields:Â [apartmentId], references: [id])
  apartmentId String?

  @@map("client")
}

enum Role {
  client
  owner
}
