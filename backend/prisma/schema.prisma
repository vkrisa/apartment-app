generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      Role     @default(CLIENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  firstName String
  lastLogin DateTime @default(now())
  lastName  String

  @@map("user")
}

enum Role {
  Client
  Owner
}
